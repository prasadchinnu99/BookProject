@model SharedLibrary.Models.BookModel;


@{
    ViewData["Title"] = "Edit";
}


<div class="Container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded">
            <br/>
            <div class="text-center">
                <h1 class="text-info">Edit Book</h1>
            </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId"  class="control-label"></label>
                    <input asp-for="BookId" placeholder="Enter Book Id" value="@Model.BookId" class="form-control" />
                <span asp-validation-for="BookId" value="@Model.BookId" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="BookName"  class="control-label"></label>
                    <input asp-for="BookName" value="@Model.BookName" placeholder="Enter Book Name" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select id="ddlcategory" asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Value","Text"))">
                </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" placeholder="Enter Author Name" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                    <input asp-for="Publisher" placeholder="Enter Publisher Name" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" placeholder="Enter Price"  class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br/>
        </form>
    </div>
</div>
</div>


<div class="text-center">
    <a class="text-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
