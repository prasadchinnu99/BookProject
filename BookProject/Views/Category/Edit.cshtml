@model SharedLibrary.Models.CategoryModel;


@{
    ViewData["Title"] = "Edit";
}




<div class="Container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded">
            <br />
            <div class="text-center">
                <h1 class="text-info">Edit Category</h1>
            </div>
            <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryId"  class="control-label"></label>
                    <input asp-for="CategoryId" placeholder="Enter Category Id"  value="@Model.CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" value="@Model.CategoryId" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <label asp-for="CategoryName"  class="control-label"></label>
                    <input asp-for="CategoryName" placeholder="Enter Category Name" value="@Model.CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
                <br />
        </form>
    </div>
       
    </div>
</div>

<div class="text-center">
    <a class="text-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
